	where []sqlla.Expr
}

type {{ $camelName }}SelectSQL struct {
	{{ .Name }}SQL
	Columns []string
	order   string
	limit   *uint64
}

func New{{ .Name | toCamel | Title }}SQL() userSQL {
	q := {{ $camelName }}SQL{}
	return q
}

func (q {{ $camelName }}SQL) Select() {{ $camelName }}SelectSQL {
	return {{ $camelName }}SelectSQL{
		q,
		[]string{
			{{ range .Columns }}"{{ .Name }}",{{ end }}
		},
		"",
		nil,
	}
}

func (q {{ $camelName }}SelectSQL) Limit(l uint64) {{ $camelName }}SelectSQL {
	q.limit = &l
	return q
}

{{ range .Columns }}{{ template "column" . }}{{ end }}
func (q {{ $camelName }}SelectSQL) ToSelectSql() (string, []interface{}, error) {
	columns := strings.Join(q.Columns, ", ")
	vs := []interface{}{}
	var wheres string
	for i, w := range q.where {
		s, v, err := w.ToSql()
		if err != nil {
			return "", nil, err
		}
		vs = append(vs, v...)

		if i == 0 {
			wheres += s
			continue
		}
		wheres += " AND " + s
	}

	query := "SELECT " + columns + " FROM {{ .Name }} WHERE " + wheres + q.order
	if q.limit != nil {
		query += " LIMIT " + strconv.FormatUint(*q.limit, 10)
	}

	return query + ";", vs, nil
}
