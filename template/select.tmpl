func (q {{ $camelName }}SelectSQL) Single(db sqlla.DB) ({{ .StructName }}, error) {
	q.Columns = {{ $camelName }}AllColumns
	query, args, err := q.ToSql()
	if err != nil {
		return {{ .StructName }}{}, err
	}

	row := db.QueryRow(query, args...)
	return q.Scan(row)
}

